<Window x:Class="VegetablePatch.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VegetablePatch"
        mc:Ignorable="d"
        Title="Выбор возраста" Icon="Icon.ico" Height="298.096" Width="504.188">
    <Grid>
        <RadioButton Name="Parent" GroupName="Old" HorizontalAlignment="Left" Margin="151,53,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked">
            <StackPanel Orientation="Horizontal" >
                <TextBlock>Отец РМ</TextBlock>
            </StackPanel>
        </RadioButton>
        <RadioButton Name="Child" GroupName="Old" HorizontalAlignment="Left" Height="33" Margin="151,103,0,0" VerticalAlignment="Top" Width="121" Checked="RadioButton_Checked">
            <StackPanel Orientation="Horizontal">
                <TextBlock>Сын школы</TextBlock>
            </StackPanel>
        </RadioButton>
        <Button x:Name="ButtonOk" Content="Ok" HorizontalAlignment="Left" Height="39" Margin="46,158,0,0" VerticalAlignment="Top" Width="162" Click="ButtonOk_Click"/>
        <Button x:Name="ButtonCancel" Content="Отмена" HorizontalAlignment="Left" Height="39" Margin="245,158,0,0" VerticalAlignment="Top" Width="182" Click="ButtonCancel_Click"/>

    </Grid>
</Window>
